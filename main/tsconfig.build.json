{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": false,
    "noEmit": false,
    "outDir": "./build"
  },
  "include": [
    "build.ts",
    "src/index.ts",
    "src/app/**/*",
    "src/interfaces/api/**/*",
    "src/infrastructure/**/*",
    "src/domain/**/*",
    "src/features/**/*",
    "src/shared/**/*",
    "src/types/**/*.d.ts",
    "tools/mkQFaceChannel.ts"
  ],
  "exclude": [
    "node_modules",
    "tests",
    "**/*.test.ts",
    "**/__tests__/**"
  ]
}
